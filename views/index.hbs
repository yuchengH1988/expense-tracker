{{!-- category --}}
<div class="form-group">
  <form action="/" method="get">
    <select class="form-control" name="category" aria-label="select category" id="categoryRecord"
      data-selected="{{selectedCategory}}" onchange="submit();">
      <option>分類</option>
      {{#each categories}}
      <option value="{{this.name}}">{{this.name}}</option>
      {{/each}}
    </select>
  </form>
</div>
{{!-- total amount --}}
<div class="amount d-flex">
  <div class="amount-title">總金額</div>
  <div class="totalAmount">{{totalAmount}}</div>
</div>

{{!-- items --}}

{{#each records}}
<div class="row justify-content-center">
  <div class="icon">{{{this.iconHTML}}}</div>
  <div>
    <div class="name">{{this.name}}</div>
    <div class="date">{{this.date}}</div>
  </div>
  <div class="amount">{{this.amount}}</div>
  <a href="/records/{{this._id}}/edit" class="btn btn-dark">edit</a>
  <form action="./records/{{this._id}}/delete" method="POST">
    <button type="submit">delete</button>
  </form>
</div>
{{/each}}


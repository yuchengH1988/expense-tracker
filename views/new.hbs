<div class="container">
  <form action="/records" method="POST">
    <div class="row mt-3">
      <div class="col-3">
        <h6 class="btn btn-secondary p-1">*必填欄位</h6>
      </div>
      <div class="col-8">
        <h2>請輸入你的支出</h2>
      </div>
    </div>

    <div class="row mt-3">
      <div class="input-group itemsSection">
        <span class="input-group-text mr-2">名稱 * ：</span>
        <input class="form-control" name="name" type="text" placeholder="ex. 早餐 家具 等等...." required>
      </div>
    </div>

    <div class="row mt-2">
      <div class="input-group itemsSection">
        <span class="input-group-text mr-2">日期 * ：</span>
        <input class="form-control" name="date" type="date" required>
      </div>
    </div>

    <div class="row mt-2">
      <div class="input-group itemsSection">
        <label class="input-group-text mr-2" for="selectCategory">類別 * ：</label>
        <select class="form-control text-secondary" id="selectCategory" name="category" required>
          <option>請選擇消費類別</option>
          {{#each categories}}
          <option value="{{this.name}}">{{this.name}}</option>
          {{/each}}
        </select>
      </div>
    </div>

    <div class="row mt-2">
      <div class="input-group itemsSection">
        <span class="input-group-text mr-2">金額 * ：</span>
        <input class="form-control" name="amount" type="number" value="{{record.amount}}" step="1" min="0" required>
      </div>
    </div>

    <div class="row mt-2">
      <div class="input-group itemsSection">
        <span class="input-group-text mr-2">店家　：</span>
        <input class="form-control" name="merchant" type="text" value="{{record.merchant}}">
      </div>
    </div>

    <div class="mt-4">
      <button class="btn btn-success mr-2" type="submit">ADD</button>
      <a href="/" class="btn btn-secondary">Back</a>
    </div>

  </form>
</div>